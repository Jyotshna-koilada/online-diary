<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Sign In</title>
    <%- include('partials/loggedout-navbar.ejs'); %>
    <div class="container">
      <div class="col-12 col-md-8 offset-md-2">
        <div class="container-fluid">
          <form class="form" action="/signin" method="post">
            <div class="mb-3">
              <label for="inputEmail" class="form-label">Email address <p class="required-field">*</p></label>
              <input required type="email" class="form-control" name="username" id="inputEmail" placeholder="Enter Your Email Address">
            </div>
            <div class="mb-3">
              <label for="inputPassword" class="form-label">Password <p class="required-field">*</p></label>
              <div class="row">
                <div class="col-10">
                  <input required type="password" class="col-10 form-control" name="password" id="inputPassword" placeholder="Enter Your Password">
                </div>
                <div class="col-2 middle">
                  <i onclick="togglePasswordVisibility(this, 'inputPassword')" class="col-2 fa fa-eye fa-1-5x"></i>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-custom btn-style">Sign In !!</button>
            <div class="container-fluid right-text">
              <a href="/signup">No account yet? Create one here</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <script src="js/password-toggle.js"></script>
  </body>
</html>
