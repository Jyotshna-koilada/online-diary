<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Memories</title>
    <%- include('partials/navbar.ejs'); %>
    <div class="container">
      <h2 class="memories-title">Have yet another happy day storing and remebering your beautiful memories... ❤️</h2>
      <div class="memories">
        <% memories.forEach(memory => { %>
          <div class="memory-display">
            <p class="memory-date"><%= memory.date %></p>
            <p class="memory-description">
              <%= memory.description.substring(0, 120) %>
              <% if(memory.description.length > 120) { %>
                . . .
              <% } %>
              <a href="#" data-bs-toggle="modal" data-bs-target="#display<%=memory._id %>"><i class="fa fa-eye display-icon" aria-hidden="true"></i></a>
            </p>
            <div class="icons">
              <a href="/edit/<%= memory._id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a>
              <a href="/delete/<%= memory._id %>"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </div>

            <div class="modal fade" id="display<%= memory._id %>" tabindex="-1" role="dialog" aria-labelledby="displayAllTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" id="displayAllTitle"><%= memory.date %></h4>
                    <button type="button" class="close btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">
                      <i class="fa fa-times" aria-hidden="true"></i>
                    </button>
                  </div>
                  <div class="modal-body">
                    <p><strong><%= memory.words %></strong></p>
                    <p><%= memory.description %></p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-custom" data-bs-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <div class="add-memory ms-auto">
      <ul>
        <li><a href="/new"><i class="fa fa-plus fa-2x plus-sign"></i></a></li>
      </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
  </body>
</html>
